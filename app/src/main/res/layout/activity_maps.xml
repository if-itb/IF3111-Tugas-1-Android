<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

    <ImageView
        android:id="@+id/compass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/compass" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pointer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="QR Code"
        android:onClick="scanQR"
        android:padding="3dp"
        android:background="#757575"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:id="@+id/button"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/days"
        android:text="days"

        android:textColor="#000000"
        android:textSize="10dp"
        android:padding="4dp"

        android:layout_marginLeft="89dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:text="hours"

        android:textColor="#000000"
        android:textSize="10dp"
        android:padding="4dp"

        android:layout_alignLeft="@+id/days"
        android:layout_marginLeft="48dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/minutes"
    android:text="minutes"

    android:textColor="#000000"
    android:textSize="10dp"
    android:padding="4dp"

    android:layout_alignLeft="@+id/hours"
    android:layout_marginLeft="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seconds"
        android:text="seconds"

        android:textColor="#000000"
        android:textSize="10dp"
        android:padding="4dp"

        android:layout_alignLeft="@+id/minutes"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDays"
        android:padding="12dp"
        android:layout_marginTop="22dp"
        android:background="#757575"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_alignTop="@+id/days"
        android:layout_marginLeft="85dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHours"
        android:padding="12dp"
        android:layout_marginTop="22dp"
        android:background="#757575"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/hours"
        android:layout_alignLeft="@+id/textViewDays"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMinutes"
        android:padding="12dp"
        android:layout_marginTop="22dp"
        android:background="#757575"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/minutes"
        android:layout_alignLeft="@+id/textViewHours"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSeconds"
        android:padding="12dp"
        android:layout_marginTop="22dp"
        android:background="#757575"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/seconds"
        android:layout_alignLeft="@+id/textViewMinutes"
        android:layout_marginLeft="51dp" />


</RelativeLayout>